{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": "..",
    "typeRoots": ["../node_modules/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
